# Frontend (React) production image with nginx

# 1) Build stage
FROM node:18-slim AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci || npm install
COPY . .
RUN npm run build

# 2) Runtime stage
FROM nginx:alpine

# Nginx config (includes /api proxy and string rewrite for localhost:3001)
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Static assets
COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

